<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<Pane fx:id="overlay" prefHeight="350.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@settings.css" />
    </stylesheets>

    <!-- Settings -->
    <Label fx:id="settingsTitle" layoutY="1.0" prefHeight="40.0" prefWidth="300.0" text="Настройки" />
    <CheckBox fx:id="autoEnter" layoutX="15.0" layoutY="45.0" prefHeight="17.0" prefWidth="275.0" text="Автовход на сервер" />
    <CheckBox fx:id="fullScreen" layoutX="14.0" layoutY="70.0" prefHeight="17.0" prefWidth="275.0" text="Игра в полный экран" />

    <!-- RAM settings -->
    <TextFlow layoutX="15.0" layoutY="100.0" prefHeight="20.0" prefWidth="275.0">
        <Text wrappingWidth="132.259765625">Выделение памяти: </Text>
        <Text fx:id="ramLabel" text="4 GB" wrappingWidth="93.490234375" />
    </TextFlow>
    <Slider fx:id="ramSlider" layoutX="5.0" layoutY="120.0" prefWidth="290.0" />

    <!-- Dir settings -->
    <TextFlow layoutX="15.0" layoutY="150.0" prefHeight="20.0" prefWidth="275.0">
        <Text>Директория загрузок: </Text>
        <Hyperlink fx:id="dirLabel" prefHeight="20.0" prefWidth="145.0" />
    </TextFlow>
    <Button fx:id="changeDir" layoutX="15.0" layoutY="190.0" prefHeight="30.0" prefWidth="130.0" text="Сменить папку" />
    <Button fx:id="deleteDir" layoutX="155.0" layoutY="190.0" prefHeight="30.0" prefWidth="130.0" text="Удалить папку" />

    <!-- Debug checkbox and apply button -->
    <CheckBox fx:id="debug" layoutX="15.0" layoutY="306.0" prefHeight="30.0" text="Режим отладки" />
    <Button fx:id="apply" defaultButton="true" layoutX="88.0" layoutY="265.0" prefHeight="30.0" prefWidth="125.0" text="Применить" />
</Pane>
