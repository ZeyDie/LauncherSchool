<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="layout" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@dialog.css" />
    </stylesheets>
   <Pane fx:id="headerPane" prefHeight="50.0" prefWidth="300.0">
      <children>
           <Button fx:id="goSettings" layoutX="186.0" layoutY="9.0" prefHeight="30.0" prefWidth="30.0" />
         <Button fx:id="goHide" layoutX="223.0" layoutY="9.0" mnemonicParsing="false" />
         <Button fx:id="goClose" layoutX="260.0" layoutY="10.0" mnemonicParsing="false" />
      </children>
   </Pane>

    <!-- Auth pane -->
    <Pane fx:id="authPane" layoutX="0.0" layoutY="50.0" prefHeight="350.0" prefWidth="300.0">
        <!-- First row -->
        <TextField fx:id="login" layoutX="50.0" layoutY="100.0" prefHeight="30.0" prefWidth="200.0" promptText="Логин" />
        <PasswordField fx:id="password" layoutX="50.0" layoutY="135.0" prefHeight="30.0" prefWidth="200.0" promptText="Пароль" />
        <Button fx:id="goAuth" defaultButton="true" layoutX="88.0" layoutY="265.0" prefHeight="30.0" prefWidth="125.0" text="Играть" />

        <!-- Second row -->
        <ComboBox fx:id="profiles" layoutX="50.0" layoutY="197.0" prefHeight="30.0" prefWidth="200.0" />
        <CheckBox fx:id="savePassword" layoutX="50.0" layoutY="170.0" prefHeight="20.0" prefWidth="200.0" text="Сохранить пароль" textFill="WHITE" />
      <Button fx:id="goLogo" layoutX="113.0" mnemonicParsing="false" />
    </Pane>

    <!-- Overlay -->
    <Pane fx:id="dim" layoutX="0.0" layoutY="50.0" prefHeight="350.0" prefWidth="300.0" visible="false" />
</Pane>
